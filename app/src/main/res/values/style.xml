<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.PlayBooks" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/text_primary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/text_primary</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/bottom_nav_background</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Ripple effect -->
        <item name="android:colorControlHighlight">@color/ripple_dark</item>
    </style>

    <!-- Dark theme -->
    <style name="Theme.PlayBooks.Dark" parent="Theme.PlayBooks">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Light theme -->
    <style name="Theme.PlayBooks.Light" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/text_primary</item>

        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>

        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>

        <item name="android:colorControlHighlight">@color/ripple_light</item>
    </style>

    <!-- Toolbar theme -->
    <style name="Theme.PlayBooks.Toolbar" parent="ThemeOverlay.Material3.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <!-- Bottom Navigation theme -->
    <style name="Theme.PlayBooks.BottomNavigation">
        <item name="android:background">@color/bottom_nav_background</item>
        <item name="itemTextColor">@color/bottom_nav_text_color</item>
        <item name="itemIconTint">@color/bottom_nav_icon_tint</item>
    </style>

    <!-- Tab Layout theme -->
    <style name="Theme.PlayBooks.TabLayout">
        <item name="tabIndicatorColor">@color/tab_indicator</item>
        <item name="tabSelectedTextColor">@color/tab_selected</item>
        <item name="tabTextColor">@color/tab_unselected</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabRippleColor">@android:color/transparent</item>
    </style>

    <!-- Card styles -->
    <style name="PlayBooksCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Button styles -->
    <style name="PlayBooksButton" parent="Widget.Material3.Button.Icon">
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="PlayBooksButtonOutlined" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="strokeColor">@color/button_primary</item>
        <item name="android:textColor">@color/button_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Text styles -->
    <style name="PlayBooksText" parent="Widget.Material3.Snackbar.TextView">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="PlayBooksText.Title" parent="PlayBooksText">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlayBooksText.Subtitle" parent="PlayBooksText">
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelMedium</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="PlayBooksText.Body" parent="PlayBooksText">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
    </style>

    <style name="PlayBooksText.Caption" parent="PlayBooksText">
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelSmall</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Search Bar style -->
    <style name="PlayBooksSearchBar" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">@color/search_background</item>
    </style>

    <!-- Progress Bar style -->
    <style name="PlayBooksProgressBar" parent="Widget.Material3.LinearProgressIndicator">
        <item name="trackColor">@color/surface_variant</item>
        <item name="indicatorColor">@color/colorPrimary</item>
        <item name="trackCornerRadius">2dp</item>
    </style>

    <!-- Rating Bar style -->
    <style name="PlayBooksRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/colorPrimary</item>
        <item name="android:progressBackgroundTint">@color/surface_variant</item>
        <item name="android:secondaryProgressTint">@color/colorPrimary</item>
    </style>

</resources>