<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/search_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="96dp"
        android:padding="12dp">

        <!-- Book cover -->
        <ImageView
            android:id="@+id/imageBookCover"
            android:layout_width="60dp"
            android:layout_height="88dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_book_placeholder"
            android:contentDescription="@string/book_cover"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/textBookTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Book Title"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/text_primary"
            app:layout_constraintStart_toEndOf="@id/imageBookCover"
            app:layout_constraintEnd_toStartOf="@id/imageArrow"
            app:layout_constraintTop_toTopOf="@id/imageBookCover" />

        <!-- Author -->
        <TextView
            android:id="@+id/textBookAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Author Name"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/text_secondary"
            app:layout_constraintStart_toStartOf="@id/textBookTitle"
            app:layout_constraintEnd_toEndOf="@id/textBookTitle"
            app:layout_constraintTop_toBottomOf="@id/textBookTitle"
            app:layout_constraintBottom_toBottomOf="@id/imageBookCover" />

        <!-- Arrow / moreâ€‘details icon -->
        <ImageView
            android:id="@+id/imageArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_forward"
            android:contentDescription="go_to_details"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/text_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
